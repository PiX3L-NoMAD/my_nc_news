{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        { "slug": "football", 
        "description": "Footie!" },
        { "slug": "food", 
        "description": "All about the food we wish we could eat more of!" }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        { 
        "username": "user1", 
        "name": "Jenny",
        "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png" 
        },
        { 
        "username": "user2", 
        "name": "Adam", 
        "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png" 
        } 
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "Serves a single user object",
    "parameters": ["username"],
    "queries": [],
    "exampleResponse": {
      "user":
      {
        "name": "jackie",
        "username": "jjjjackie",
        "avatar_url": "https://awebsite.org/randompic.jpg"
      }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles, ignoring the body-property, and adding comment_count based on each articles article_id, by default the list will be ordered by the created_at time stamp in descending order. It can be queried using sort_by, order and topic. If no topic is provided it will serve all articles.",
    "queries": { 
      "sort_by": [ "article_id", "title", "author", "topic", "created_at", "votes", "comment_count" ], 
      "order": ["ASC", "DESC"],
      "topic": ["mitch", "cats", "paper"]
    },
    "defaultQueries": {
      "sort_by": "created_at",
      "order": "desc"
    },
    "exampleResponse": {
      "articles": [
        {
          "article_id": 3,
          "title": "The world is getting hotter",
          "topic": "climate",
          "author": "anonymous",
          "created_at": "2021-03-31T13:51:23.110Z",
          "votes": 2,
          "comment_count": 1,
          "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700"
        }, {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "Serves a single article object",
    "parameters": ["article_id"],
    "queries": [],
    "exampleResponse": {
      "article":
        {
          "article_id": 3,
          "title": "The world is getting hotter",
          "topic": "climate",
          "author": "anonymous",
          "created_at": "2021-03-31T13:51:23.110Z",
          "votes": 2,
          "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700",
          "comment_count": 6
        }
    }
  },
  "GET /api/articles/:article_id/comments": {
  "description": "Serves an array of comments for the given article_id, sorted by most recent comment first",
  "parameters": ["article_id"],
  "queries": [],
  "exampleResponse": {
    "comments": [
      {
        "comment_id": 14,
        "votes": 10,
        "created_at": "2021-06-12T12:34:56.789Z",
        "author": "user123",
        "body": "This article is amazing!",
        "article_id": 1
      },
      {
        "comment_id": 15,
        "votes": 5,
        "created_at": "2021-06-11T11:22:33.456Z",
        "author": "anotherUser321",
        "body": "Interesting perspective.",
        "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Creates and adds a new comment for the given article_id, a valid username and body is require in the input request",
    "parameters": ["article_id"],
    "queries": [],
    "exampleInputRequest": {"username": "exampleUsername", "body": "Example comment here!" },
    "exampleResponse": {
      "comment":
        {
          "comment_id": 4,
          "article_id": 5,
          "author": "exampleUsername",
          "body": "Example comment here!",
          "votes": 0,
          "created_at": "2023-01-05T13:41:02.621Z"
        }
    }
  },
  "PATCH /api/articles/:article_id": {
      "description": "Updates the vote count for a specific article, and then serves the updated article",
      "queries": [],
      "parameters": ["article_id"],
      "exampleRequestBody": { "inc_votes": 10 },
      "exampleResponse": {
        "article":
          {
            "article_id": 3,
            "title": "The world is getting hotter",
            "topic": "climate",
            "author": "anonymous",
            "created_at": "2021-03-31T13:51:23.110Z",
            "votes": 12,
            "comment_count": 1
          }
      }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "Updates the votes on a comment based on its comment_id, and returns the updated comment",
    "parameters": ["comment_id"],
    "queries": [],
    "exampleRequestBody": { "inc_votes": 1 },
    "exampleResponse": {
      "comment":
      {
        "comment_id": 3,
        "body": "Replacing the quiet elegance of the dark suit and tie with the casual indifference of these muted earth tones is a form of fashion suicide, but, uh, call me crazy â€” onyou it works.'",
        "article_id": 1,
        "author": "icellusedkars",
        "votes": 101,
        "created_at": "2020-03-01T01:13:00.000Z"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a comment based on its comment_id, and returns an empty response",
    "parameters": ["comment_id"],
    "queries": [],
    "exampleRequestPath": "/api/comments/3", 
    "exampleResponse": {}
  }
}
